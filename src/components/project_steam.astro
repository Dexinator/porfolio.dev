---
import steamdata from './Data/steamdata.json';
interface Props {
  title: string
  description: string
  src: string
}

const { title, description, src } = Astro.props

---


<section class="project">
  <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
  <a href={src} target="_blank">
    <p class="text-gray-600 dark:text-gray-300">{description}</p>
  </a>
</section>
<slot></slot>
{
  steamdata.map(({titulo, conclusiones, imagenes}) => {
    const tituloCorto = titulo.split(".")[0]; // Obtener la parte antes del primer "."
    return(
    <h3 class={`text-xl font-bold text-yellow-400`} id={tituloCorto}>{titulo}</h3>
    <p class="text-gray-600 dark:text-gray-300" style="white-space: pre-line;">{conclusiones}</p>
    <div>
      {imagenes.map((imagen)=>(
        <div class="relative flex flex-col items-center col-span-6 row-span-5 overflow-hidden rounded-xl shadow-xl">
          
          <img 
          alt="Imagen Proyecto Jorge Badillo" 
          class="w-full h-full object-cover" 
          loading="lazy" 
          src={imagen} 
          />
          
        </div>
        ))
      }
    </div>
    )
  }
  )
}